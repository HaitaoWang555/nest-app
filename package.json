{
  "name": "nest-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build --webpack --webpackPath webpack.config.prod.js",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "cross-env NODE_ENV=dev nest start",
    "dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug": "cross-env NODE_ENV=dev nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/apps/admin/main",
    "lint": "eslint --cache \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --config ./apps/templete/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "10.3.7",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.3.7",
    "@nestjs/platform-express": "10.3.7",
    "@nestjs/serve-static": "4.0.2",
    "@nestjs/swagger": "7.3.1",
    "@nestjs/typeorm": "10.0.2",
    "body-parser": "1.20.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "csv-parse": "5.5.5",
    "dayjs": "1.11.10",
    "diff": "5.2.0",
    "dot": "1.1.3",
    "glob": "10.3.12",
    "ioredis": "5.4.0",
    "mysql2": "3.9.4",
    "nest-winston": "1.9.4",
    "redis-info": "3.1.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "sqlite3": "5.1.7",
    "typeorm": "0.3.20",
    "typeorm-naming-strategy": "2.0.7",
    "uuid": "^9.0.1",
    "webpack": "^5.91.0",
    "winston": "3.13.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.7",
    "@types/body-parser": "1.19.5",
    "@types/diff": "5.0.9",
    "@types/dot": "1.1.7",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "1.4.11",
    "@types/node": "20.12.7",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "chalk": "4.1.2",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "globals": {
      "BUILD_DATE": "2024/4/22 15:10:05"
    },
    "moduleNameMapper": {
      "^apps/(.*)": "<rootDir>/apps/$1",
      "^@libs/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@libs/typeorm(|/.*)$": "<rootDir>/libs/typeorm/src/$1",
      "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "pnpm lint"
  }
}